<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.sacd"
  version="1.0.0"
  name="SACD ISO support"
  provider-name="spiff">
  <requires>
    <import addon="kodi.vfs" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.vfs"
    protocols="sacd"
    extensions=".iso"
    files="true"
    directories="true"
    filedirectories="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">SACD ISO support</summary>
    <description lang="en">SACD ISO support</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
